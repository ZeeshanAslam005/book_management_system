<h1>Book Details</h1>

<p><strong>Title:</strong> <%= @book.title %></p>
<p><strong>Author:</strong> <%= @book.author %></p>
<p><strong>Price:</strong> <%= number_to_currency(@book.price) %></p>
<% if current_user&.admin? || current_user&.manager? %>
  <p><strong>Bookstore:</strong> <%= @book.bookstore&.name %></p>
<% end %>
<p><strong>Published Date:</strong> <%= @book.published_date %></p>

<%= link_to 'Back to Books', books_path, class: 'btn btn-secondary' %>
<% if current_user&.admin? || current_user&.manager? %>
  <%= link_to 'Edit Book', edit_book_path(@book), class: 'btn btn-primary' %>
  <%= link_to 'Delete Book', @book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
<% end %>
