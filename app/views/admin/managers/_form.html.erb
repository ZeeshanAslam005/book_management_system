<%= form_for(@manager, url: @manager.new_record? ? admin_managers_path : admin_manager_path(@manager), method: @manager.new_record? ? :post : :patch) do |f| %>
  <div>
    <%= f.label :email, "Manager Email" %>
    <%= f.email_field :email %>
  </div>

  <% if @manager.new_record? %>
    <div>
      <%= f.label :password, "Password" %>
      <%= f.password_field :password %>
    </div>
    <div>
      <%= f.label :password_confirmation, "Password Confirmation" %>
      <%= f.password_field :password_confirmation %>
    </div>
  <% end %>

  <div>
    <%= f.label :assign_bookstores, "Assign Bookstores" %>
    <%= f.collection_check_boxes :bookstore_ids, Bookstore.all, :id, :name do |b| %>
      <div>
        <%= b.check_box %>
        <%= b.label %>
      </div>
    <% end %>
  </div>

  <div>
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to 'Cancel', admin_managers_path, class: "btn btn-secondary" %>
  </div>
<% end %>